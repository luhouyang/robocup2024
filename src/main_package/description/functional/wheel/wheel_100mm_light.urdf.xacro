<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="omni_wheel" params="prefix parent *origin">
    <joint name="${prefix}_shaft_joint" type="continuous">
      <parent link="${parent}" />
      <child link="${prefix}_housing_link" />
      <xacro:insert_block name="origin" />
      <axis xyz="0 0 1" />
      <dynamics damping="0.7" />
    </joint>
    <transmission name="${prefix}_shaft_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${prefix}_shaft_joint">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
      </joint>
      <actuator name="${prefix}_shaft_motor">
        <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <link name="${prefix}_housing_link">
      <visual>
        <geometry>
          <cylinder length="0.040" radius="0.0675" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <material name="gray" />
      </visual>
      <collision>
        <geometry>
          <sphere radius="0.0675" />
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <material name="gray" />
      </collision>

      <inertial>
        <mass value="0.25" />
        <inertia ixx="0.00235" ixy="0" ixz="0" iyy="0.00235" iyz="0" izz="0.015" />
      </inertial>
    </link>
    <gazebo reference="${prefix}_housing_link">
      <material>Gazebo/Gray</material>

    </gazebo>

  </xacro:macro>
</robot>